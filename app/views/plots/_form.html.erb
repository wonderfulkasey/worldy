<%= form_for(@plot) do |f| %>

    <% if @plot.world.nil? %>
        <label class="label">plot world:</label>
        <%= f.select :world_id, options_from_collection_for_select(world.all, :id, :name) %><br>
        <i>Don't see your world? Create a new world <%= link_to "here.", new_world_path %></i><br><br>
    <% else %>
        <%= hidden_field_tag "plot[world_id]", @plot.world_id %>
    <% end %>

    <label class="label"> title: </label>
    <%= f.text_field :title %><br><br>

    <label class="label">Description:</label>
    <%= f.text_field :description %><br><br>
    
    <%= f.hidden_field :user_id, value:current_user.id %>
 
   <input type="submit" value="Submit" class="button is-primary">
<% end %>